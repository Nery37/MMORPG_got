<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% for(var i = 0; i < result.length; i++){ %>
			<%
				var txt_acao = '';

				switch(parseInt(result[i].acao)){
					case 1: txt_acao = ' aldeão(ões) coletando recursos'; break;
					case 2: txt_acao = ' enforcamento(s) programado'; break;
					case 3: txt_acao = ' aldeão(ões) em treinamento de história'; break;
					case 4: txt_acao = ' aldeão(ões) em treinamento de magia'; break;
				}
				console.log(result[i].hora);
				var date = new Date();
				var momento_atual = date.getTime();

				var segundos_restantes = Math.round((result[i].hora - momento_atual) / 1000); 

			%>
			<li><%=result[i].quantidade%><%=txt_acao%>
				- <small>restam <strong><span class="tempo_restante "><%=segundos_restantes%></span></strong> segundos
				- <a href="#">revogar ordem</a></small>
			</li>
		<% } %>
	</ul>
</div>